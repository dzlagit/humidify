@page "/"
@page "/home"
@inject humidify.Web.Services.ISensorDataService SensorDataService
@using humidify.Core.Models
@using System.Threading
@implements IDisposable

@rendermode InteractiveServer

<PageTitle>Dashboard</PageTitle>

@if (isLoading)
{
    <p><em>latest data loading...</em></p>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}
else
{
    <div class="dashboard-container">
        <div class="sensor-card temperature">
            <div class="card-header">
                Temperature
            </div>
            <div class="card-body">
                <span class="value">@currentTemperature</span>
                <span class="unit">°C</span>
            </div>
        </div>

        <div class="sensor-card humidity">
            <div class="card-header">
                Humidity
            </div>
            <div class="card-body">
                <span class="value">@currentHumidity</span>
                <span class="unit">%</span>
            </div>
        </div>
    </div>

    <div class="last-reading-time">
        Last reading: @lastReadingTime
    </div>


}

@code {
    private string currentTemperature = "--";
    private string currentHumidity = "--";
    private string lastReadingTime = "";
    private string? errorMessage;
    private bool isLoading = true;
    private SensorReading? latestReading;

    // Flag to prevent StateHasChanged from running after disposal
    private bool _isDisposed = false;

    // CancellationTokenSource for safe cancellation
    private CancellationTokenSource? cts;

    // Time interval for refresh (30 seconds)
    private static readonly TimeSpan RefreshInterval = TimeSpan.FromSeconds(30);

    protected override async Task OnInitializedAsync()
    {
        // 1. Clean up potential leftover resources from a previous, failed circuit attempt.
        cts?.Cancel();
        cts?.Dispose();

        // 2. Initialize fresh resources for this new component instance.
        _isDisposed = false;
        cts = new CancellationTokenSource();
        CancellationToken token = cts.Token;

        // 3. Load initial data
        await LoadDataAsync(token);

        // 4. Start the background loop safely, not awaiting the task.
        _ = StartDataRefreshLoop(token);
    }

    private async Task StartDataRefreshLoop(CancellationToken cancellationToken)
    {
        while (!cancellationToken.IsCancellationRequested)
        {
            try
            {
                // Wait for the refresh interval
                await Task.Delay(RefreshInterval, cancellationToken);

                if (cancellationToken.IsCancellationRequested) return;

                // CRITICAL FIX: Use InvokeAsync to run data fetching and StateHasChanged
                // on the Blazor Synchronization Context for safe UI updates.
                if (!_isDisposed)
                {
                    await InvokeAsync(async () =>
                    {
                        await LoadDataAsync(cancellationToken);
                        // StateHasChanged is called explicitly here to force a UI re-render
                        StateHasChanged();
                    });
                }
            }
            catch (TaskCanceledException)
            {
                break; // Expected cleanup path on disposal.
            }
            catch (Exception ex)
            {
                if (!_isDisposed)
                {
                    // Update error message on the UI thread
                    await InvokeAsync(() =>
                    {
                        errorMessage = $"Error in refresh loop: {ex.Message}";
                        StateHasChanged();
                    });
                    // Wait 5 seconds before retrying
                    await Task.Delay(TimeSpan.FromSeconds(5), cancellationToken);
                }
            }
        }
    }

    private async Task LoadDataAsync(CancellationToken cancellationToken)
    {
        try
        {
            // Use the injected service
            latestReading = await SensorDataService.GetLatestReadingAsync();

            if (_isDisposed) return;

            if (latestReading != null)
            {
                currentTemperature = latestReading.Temperature.ToString("0.0");
                currentHumidity = latestReading.Humidity.ToString("0.0");
                lastReadingTime = latestReading.Timestamp.ToLocalTime().ToString("h:mm tt, d MMM yyyy");
                errorMessage = null;
            }
            else
            {
                errorMessage = "No data found. Ensure the API is running and has data.";
            }
        }
        catch (TaskCanceledException)
        {
            // ignore cancellation exceptions
        }
        catch (Exception ex)
        {
            if (isLoading && !_isDisposed)
            {
                errorMessage = $"Failed to fetch data. Error: {ex.Message}";
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    public void Dispose()
    {
        _isDisposed = true;
        cts?.Cancel();
        cts?.Dispose();
    }


}